<div class="container mt-5" style="margin-top: 50px;">
      <div class="row tm-content-row">
        <div>
          <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
              <table class="table table-hover tm-table-small tm-product-table">
                <thead>
                  <tr>
                    {{!-- <th scope="col">&nbsp;</th> --}}
                    <th scope="col">Loại Phòng</th>
                    <th scope="col">Số Giường</th>
                    <th scope="col">Số Phòng Còn Lại</th>
                    <th scope="col">Giá</th>
                    <th scope="col">&nbsp;</th>
                  </tr>
                </thead>
				{{#each types}}
                <tbody>
                  <tr style="font-size: 16px;">
                    {{!-- <th scope="row"><input type="checkbox" /></th> --}}
                    <td class="tm-product-name">{{name}}</td>
                    <td>{{bedNumber}}</td>
                    <td>{{roomNumber}}</td>
                    <td>{{price}}</td>
                    <td>
					<a href="/admin/room-type/{{id}}/edit">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</a>
                      <div onclick="removeType()"  class="remove-btn tm-product-delete-link" style="padding-left: 8px;">
						<i class="fa fa-trash" aria-hidden="true"></i>
                      </div>
                    </td>
                  </tr>
                </tbody>
				{{/each}}
              </table>
            </div>
            <!-- table container -->
            <a href="/admin/room-type/create" class="new-room-type btn btn-primary btn-block text-uppercase mb-3">
				Thêm Loại Phòng
			</a>
          </div>
        </div>
    </div>
</div>
