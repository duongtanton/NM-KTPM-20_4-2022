<div class="page-header">
    <h1>
        Manage hotels
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
                Adding-hotel form
        </small>
    </h1>
</div>
<div>
    <div class="row col-xs-12">
        <form class="form-horizontal" action="/admin/hotels/create?_method=POST" method="POST">
            <div class="form-group" style="padding-bottom: 50px; padding-top: 40px">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Hotel Name</label>
                <div class="col-sm-9">
                    <input name="hotelName" type="text" id="form-field-1" placeholder="Hotel Name" class="col-xs-10 col-sm-5">
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 50px;" >
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Hotel Code</label>
                <div class="col-sm-9">
                    <input name="hotelCode" type="text" id="form-field-1" placeholder="Hotel Code" class="col-xs-10 col-sm-5">
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 50px;" >
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Hotel Address</label>
                <div class="col-sm-9">
                    <input name="hotelAddress" type="text" id="form-field-1" placeholder="Hotel Address" class="col-xs-10 col-sm-5">
                </div>
            </div>
            <button type="submit" class="btn btn-default col-sm-2" style="left:40%">Submit</button>
        </form>
    </div>
</div>
