<div class="page-header">
    <h1>
        Manage Employee Type
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Type List
        </small>
    </h1>
</div>
<div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>TypeID</th>
                <th>TypeName</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each type}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.typeId}}</td>
                <td>{{this.typeName}}</td>
                <td>
                    <a class="btn btn-link" href="" data-toggle="modal" data-id = "{{this.id}}" data-target="#delete-type-modal">Delete</a>
                    <a class="btn btn-link" href="/admin/employee-type/{{this.id}}/edit">Edit</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal -->
<div id="delete-type-modal" class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Type?</h1>
      </div>
      <div class="modal-body">
        Do you want to delete this type?
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-delete-type" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!--Delete hidden form-->
<form name="delete-type-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        var typeID;
        var deleteform = document.forms['delete-type-form'];
        var btnDeleteType = document.getElementById('btn-delete-type')

        $('#delete-type-modal').on('show.bs.modal', function(event){
            var button = $(event.relatedTarget);
            typeID = button.data('id');
        });


        btnDeleteType.onclick = function(){
            deleteform.action='/admin/employee-type/' + typeID + '?_method=DELETE';
            deleteform.submit(); 
        }
    });
</script>
