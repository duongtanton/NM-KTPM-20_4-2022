<!-- inline scripts related to this page -->
<script type="text/javascript">
    jQuery(function ($) {
        const status = $('.room-status').text().trim();
        switch (status) {
            case 'available': {
                $('.room-status').addClass('label label-success arrowed');
                break;
            }
            case 'occupied': {
                $('.room-status').addClass('label label-danger arrowed');
                break;
            }
            case 'cleaning': {
                $('.room-status').addClass('label label-info arrowed');
                break;
            }
            case 'maintenance': {
                $('.room-status').addClass('label label-warning arrowed');
                break;
            }
            default: {
                $('.room-status').addClass('label');
            }
        }
    });
</script>